@model ControleAtividade.Models.AtividadesViewModels.EditarAtividadeViewModel
@{
    ViewData["Title"] = "Detalhes da atividade";
    Layout = "~/Views/Shared/_LayoutGenerico.cshtml";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" disabled>
        </div>
        <div class="form-group">
            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" class="form-control" disabled>
        </div>
        <div class="form-group">
            <label asp-for="Tipo"></label>
            <input asp-for="Tipo" class="form-control" disabled>
        </div>
    </div>
</div>