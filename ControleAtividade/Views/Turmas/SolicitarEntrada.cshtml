@model ControleAtividade.Models.TurmasViewModels.DetalharTurmaViewModel
@{
    ViewData["Title"] = "Solicitar entrada em turma";
    Layout = "~/Views/Shared/_LayoutGenerico.cshtml";
}


<div class="row">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div><h1>Solicitar entrada na turma</h1></div>
            <div><h3>@Html.DisplayFor(model => model.Turma.Codigo) - @Html.DisplayFor(model => model.Turma.Nome)</h3></div>
            <div class="text-muted"><h4>Responsável @Html.DisplayFor(model => model.Turma.Professor.ApplicationUser.Nome)</h4></div>
        </div>
        @Html.HiddenFor(model => model.Turma.Codigo)

        <div class="col-md-12 text-center">
            <br />
            @if (ViewBag.Sucesso != null)
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @ViewBag.Sucesso
                </div>
            }
            @if (ViewBag.Erro != null)
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @ViewBag.Erro
                </div>
            }
            <button type="submit" class="btn btn-default">Entrar</button>
        </div>
    </form>
</div>


