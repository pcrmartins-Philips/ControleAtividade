@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-md-12">
        <div class="col-md-6 col-md-offset-3">
            <h2>@ViewData["Title"]</h2>
            <h4>Use sua conta para entrar.</h4>
            <hr />
        </div>
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-md-6 col-md-offset-3">
                <label asp-for="CPF"></label>
                <input asp-for="CPF" class="form-control " />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 col-md-offset-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 col-md-offset-3">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayName("Lembrar?")
                    </label>
                </div>
            </div>
            <div class="form-group col-md-6 col-md-offset-3">
                <button type="submit" class="btn btn-default">Login</button>
            </div>
            <div class="form-group col-md-6 col-md-offset-3">
                <p>
                    <a asp-action="ForgotPassword">Esqueceu sua senha?</a>
                </p>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrar um novo usuário?</a>
                </p>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
